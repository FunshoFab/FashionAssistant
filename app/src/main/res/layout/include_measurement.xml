<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:padding="@dimen/card_content_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/horizontal_margin"
            android:text="@string/measurement_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <include layout="@layout/include_cap"/>

        <TextView
            android:id="@+id/tv_top_title"
            android:text="@string/top_title"
            android:layout_marginTop="@dimen/client_detail_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        <include layout="@layout/include_top"/>

        <TextView
            android:id="@+id/tv_trouser_title"
            android:text="@string/trouser_title"
            android:layout_marginTop="@dimen/client_detail_margin"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        <include layout="@layout/include_trouser"/>

    </LinearLayout>

</android.support.v7.widget.CardView>